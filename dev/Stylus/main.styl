@import 'normalize.styl'
@import 'fonts.styl'
@import '_sprite.styl'
@import 'nib'

html
    font-size 16px
body
    font-family OSansReg, arial
    font-weight 400
    font-size 16px
a
    &:link
    &:visited
        text-decoration none
ul
p
h1
h2
h3
figure
    margin 0
    padding 0
rems(pixel)
    (pixel/16)rem
alinear()
    display inline-block
    vertical-align top
centrar()
    margin-left auto
    margin-right auto
h1
h2
h3
h4
    font-family OSansBold
h1
    font-size rems(24)
h2
    font-size rems(22)
h3
    font-size rems(18)
ul
    list-style none


// COLORS
azul-oscuro = #062138
azul-claro = #006ac7
gris = #c7c7c7
gris-footer= #24262c
azul-gradiente = #4da5f1
amarillo = #d0bb00
inputs = #ededed

[class^="icon-"], [class*=" icon-"]
    font-family 'icomoon'
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

.icon-twitter
    &:before
        content "\f081"

.icon-facebook
    &:before
        content "\f082"

.icon-phone
    &:before
        content "\f095"

.icon-caret-down
    &:before
        content "\f0d7"

.icon-caret-right
    &:before
        content "\f0da"

.icon-envelope
    &:before
        content "\f0e0"

.icon-angle-right
    &:before
        content "\f105"

//HEADER
header
    .row
        figure
            border-right 1px solid rgba(0,0,0,.2)
            height 109px
            text-align: center
        .menu
            ul
                text-align: center
        li
            text-transform: uppercase
            a
                &:hover
                    text-decoration none
        button
            background-color: transparent
            border 0
            span
                font-size: 2.2rem
        a        
            span
                font-size: 2.2rem
        .menu2Mobile
            border 1px solid rgba(0, 0, 0, .2)
        .countries
        .user
        .form
            border-top 1px solid rgba(0, 0, 0, .2)
            border-bottom 1px solid rgba(0, 0, 0, .2)
            border-right 1px solid rgba(0, 0, 0, .2)
        .menu2Mobile
        .countries
        .user
        .form
            height 41px
            text-align: center
            padding 0
            span
                line-height 1.5
        .form
            position relative
            button
            input
                display inline-block
                vertical-align middle
            button
                width 30%
            input
                border 0
                width 67%

//HEADER FIN
@media screen and (min-width:768px)
    header
        &.medium
            .wrap
                > div
                    display inline-block
                    vertical-align middle
                    margin 0 .8rem
                .logotipo
                    margin-bottom 0
                .infoCliente
                    span
                        font-size 14px
                .redesSociales
                    ul
                        margin 0
    .servicios
        &.medium
            padding-left 2rem
            padding-right 2rem
            text-align center
            article
                alinear()
                &:nth-child(odd)
                    margin-right 5rem
    .aliados
        &.medium
            ul
                li
                    display inline-block
                    vertical-align middle
                    margin 0 4rem
    .telecomunicadoras
        &.medium
            text-align center
            margin 2rem 0
            ul
                li
                    display inline-block
                    vertical-align middle
                    margin 0 2.5rem
    footer
        &.medium
            padding-left 2rem
            padding-right 2rem
            .wrap
                text-align center
                article
                    alinear()
                    text-align left
                    width (100/3)%
                    margin-bottom 0
                    span
                        margin-left 0
                        margin-right 0
                        font-size 14px

@media screen and (min-width:1000px)
    .wrap
        margin-left auto
        margin-right auto
        width rems(940)
    header
        &.large
            text-align left
            .wrap
                .logotipo
                .redesSociales
                    margin 0
                    width 25%
                .infoCliente
                    margin 0
                    text-align center
                    width 49%
                .redesSociales
                    text-align right
    .servicios
        &.large
            article
                margin-right 1.7rem !important
                &:nth-child(3n + 3)
                    margin-right 0 !important
    section
        &.large
            .texto
            ul
                padding 0 6rem
                font-size rems(14)
                li
                    margin .8rem
                    li
                        margin 0
            h3
                margin 3rem 0
                span
                    display inline-block
                    vertical-align middle
            .icon-recarga
                display inline-block
    .banner-principal
        &.large
            text-align center
            box-sizing border-box
            height rems(250)
            hgroup
            .imagen
                display inline-block
                vertical-align middle
            hgroup
                text-align left
        &.agencias
            .wrap
                padding-top 3rem

    .aliados
        &.large
            ul
                li
                    margin 0 2rem
    footer
        &.large
            h3
                text-align center
            ul
                padding-left 5rem




